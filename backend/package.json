{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "../shared",
    "../shared/packages/*"
  ],
  "scripts": {
    "dev": "bun run dev:elysia",
    "dev:elysia": "bun run --cwd packages/elysia-shell dev",
    "start": "bun run start:elysia",
    "start:elysia": "bun run --cwd packages/elysia-shell start",
    "build": "bun run build:elysia",
    "build:elysia": "bun run --cwd packages/elysia-shell build",
    "test": "bun run --cwd packages/elysia-shell test"
  },
  "dependencies": {
    "elysia": "^1.4.25",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
