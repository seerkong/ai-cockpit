{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "paths": {
      "shared": ["../shared"],
      "@backend/core": ["./packages/core/src"],
      "@backend/organ": ["./packages/organ/src"],
      "@backend/composer": ["./packages/composer/src"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "../shared/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
