{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@frontend/core": ["./packages/core/src/index.ts"],
      "@frontend/organ": ["./packages/organ/src/index.ts"],
      "@frontend/composer": ["./packages/composer/src/index.ts"]
    }
  },
  "include": [
    "packages/*/src/**/*.d.ts",
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.vue"
  ],
  "exclude": ["packages/*/src/**/*.test.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
